
<section class='hero py-8'>
            <div class='container mx-auto flex items-center justify-between'>
                <div class='w-1/2'>
                    <h6 class='text-lg'><em>Are you hungry?</em></h6>
                    <h1 class= 'text-3xl md:text-6xl font-bold' >Don't Wait!</h1>
                    <button class="order-now-button rounded-full px-6 py-2 text-white font-bold mt-4">Order Now</button>
                </div>
                <div class='w-1/2'>
                    <img src="/img/hero-pizza.png" alt="">
                </div>
            </div>
</section>
<section class='menu container mx-auto py-8'>
            <h1 class='text-xl font-bold mb-8'>All Pizzas</h1>
            <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-16 gap-y-16'>
                <% pizzas.forEach(function(pizzas){ %>
                    <div class='w-full md:w-64'>
                        <div>
                            <img class='h-40 mb-4 mx-auto' src="/img/<%= pizzas.image %>" alt="">
                            <div class="text-center">
                                <h2 class='mb-4 text-lg'><%= pizzas.name %></h2>
                                <span class='size py-1 px-4 rounded-full uppercase text-xs item-center '><%= pizzas.size %></span>
                                <div class='flex items-center  justify-around mt-6'>
                                    <span class="font-bold text-lg">â‚¹<%= pizzas.price %></span>
                                    <button data-pizza='<%= JSON.stringify(pizzas)%>' class='add-to-cart  py-0.5 px-5 rounded-full flex items-center '>
                                        <span>+</span>
                                        <span class='ml-3'>Add</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                <%})%>
            </div>
</section>
