<section class="status"> 
    <div class="container mx-auto ">
        <div class="status-box lg:w-2/3 mx-auto px-4">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-2xl">Track delivery status</h1>
                <h6 class="text-sm font-bold bg-white rounded-full py-1 px-4 text-green-600" ><%= order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status-line text-lg md:text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status-line text-lg md:text-xl pb-16" data-status="confirmed"><span>Order Confirmation</span></li>
                <li class="status-line text-lg md:text-xl pb-16" data-status="prepared"><span>Preparation</span></li>
                <li class="status-line text-lg md:text-xl pb-16" data-status="delivered"><span>Out for Delivery</span></li>
                <li class="status-line text-lg md:text-xl" data-status="completed"><span>Complete</span></li>
            </ul>
        </div>
    </div>
</section>